version: '3.7'

services:

  webapp:
    container_name: portfolio
    build:
      context: .
      dockerfile: Dockerfile
    image: elvisgastelum/portfolio:dev
    volumes:
      - '.:/usr/src/app/'
      - '/usr/src/app/node_modules'
    ports:
      - 3000:3000
    environment:
      - CHOKIDAR_USEPOLLING=true